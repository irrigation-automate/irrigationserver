{
  "name": "irrigation-server",
  "version": "1.0.0",
  "description": "irrigation server node express mongoDB ",
  "main": "dist/server.js",
  "_moduleAliases": {
    "@": "./dist"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs --silent",
    "test:watch": "npm test -- --watch",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs",
    "test:coverage": "npm test -- --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs --testPathIgnorePatterns='.*\\.swagger\\.spec\\.[jt]sx?$' --silent",
    "swagger:generate": "ts-node src/configs/swagger.ts",
    "swagger:serve": "nodemon --exec \"npm run swagger:generate\" --watch src/Routes/",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-all": "pnpm run lint && pnpm run check-types && pnpm run check-format",
    "fix-format": "prettier --write ."
  },
  "keywords": [
    "irrigation",
    "automation"
  ],
  "author": "raed rdhaounia",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/server.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {
    "@types/express-serve-static-core": "^4.17.35",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "mongodb": "^5.6.0",
    "mongoose": "^7.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/node": "^20.19.19",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.1",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
